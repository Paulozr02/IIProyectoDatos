<Window x:Class="IIProyectoDatos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hierarchical Clustering - Proyecto Datos" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Análisis de Clustering Jerárquico" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>
        
        <!-- Área principal con tabla y botones -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- DataGrid con scroll -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0">
                <DataGrid x:Name="DataGridPeliculas" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          GridLinesVisibility="All"
                          AlternatingRowBackground="LightGray"
                          RowHeaderWidth="30">
                </DataGrid>
            </Border>
            
            <!-- Panel de botones lateral -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock Text="Métricas de Distancia" FontWeight="Bold" 
                           FontSize="14" Margin="0,0,0,10"/>
                
                <Button x:Name="BtnEuclidiana" Content="Euclidiana" 
                        Height="40" Margin="0,5" Click="BtnDistancia_Click" 
                        Tag="Euclidiana" Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" Cursor="Hand"/>
                
                <Button x:Name="BtnManhattan" Content="Manhattan" 
                        Height="40" Margin="0,5" Click="BtnDistancia_Click"
                        Tag="Manhattan" Background="#2196F3" Foreground="White"
                        FontWeight="Bold" Cursor="Hand"/>
                
                <Button x:Name="BtnCoseno" Content="Coseno" 
                        Height="40" Margin="0,5" Click="BtnDistancia_Click"
                        Tag="Coseno" Background="#FF9800" Foreground="White"
                        FontWeight="Bold" Cursor="Hand"/>
                
                <Button x:Name="BtnHamming" Content="Hamming" 
                        Height="40" Margin="0,5" Click="BtnDistancia_Click"
                        Tag="Hamming" Background="#9C27B0" Foreground="White"
                        FontWeight="Bold" Cursor="Hand"/>
                
                <Separator Margin="0,20"/>
                
                <Button x:Name="BtnAgregarFila" Content="➕ Agregar Fila" 
                        Height="35" Margin="0,5" Click="BtnAgregarFila_Click"
                        Background="White" BorderBrush="Gray" Cursor="Hand"/>
                
                <Button x:Name="BtnEliminarFila" Content="➖ Eliminar Fila" 
                        Height="35" Margin="0,5" Click="BtnEliminarFila_Click"
                        Background="White" BorderBrush="Gray" Cursor="Hand"/>
            </StackPanel>
        </Grid>
        
        <!-- Botones inferiores -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,15,0,0">
            
            <Button x:Name="BtnCargarCSV" Content="📂 Cargar CSV" 
                    Width="150" Height="45" Margin="10,0" 
                    Click="BtnCargarCSV_Click" FontSize="14" 
                    Background="#607D8B" Foreground="White" FontWeight="Bold"
                    Cursor="Hand"/>
            
            <Button x:Name="BtnGenerarJSON" Content="🚀 Generar JSON" 
                    Width="150" Height="45" Margin="10,0" 
                    Click="BtnGenerarJSON_Click" FontSize="14"
                    Background="#F44336" Foreground="White" FontWeight="Bold"
                    Cursor="Hand"/>
            
            <Button x:Name="BtnLimpiar" Content="🗑️ Limpiar Tabla" 
                    Width="150" Height="45" Margin="10,0" 
                    Click="BtnLimpiar_Click" FontSize="14"
                    Background="#9E9E9E" Foreground="White" FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>